@page "/OrdenCompra/Index"
@inject OrdenCompraService ordenCompraService
@inject OrdenCompraDetalleService provedoresService
@rendermode InteractiveServer
@inject NavigationManager navigation
@inject ToastService toastService

<PageTitle>Orden Compra</PageTitle>
<div class="row" style="background-color:white; padding:10px; margin:10px;">
	<div class="col">
		<div class="text-left">
			<h2 class="text-black"><i class="bi bi-person-badge m-1"></i> Orden Compra</h2>
		</div>
	</div>
	<div class="col text-end">
		<a href="/OrdenCompra/Create" class="btn btn-secondary">Crear nuevo Orden</a>
	</div>
</div>

<div class="container">
	<div class="card card-custom">
		<div class="card-body">
			<div class="row">
				<div class="col-4">
					<div class="input-group" style="width: 250px">
						<div class="form-floating">
							<InputSelect class="form-select" id="floatingSelect" aria-label="Floating label select example" @bind-Value="@valorFiltro">
								<option value="" selected disabled>--- Selecciona ---</option>
								<option value="id">OrdenCompraId</option>
								<option value="NoFactura">No. Factura</option>
								<option value="FechaEmision"> Fecha Emision</option>
								<option value="FechaVencimiento"> Fecha Vencimiento</option>
							</InputSelect>
							<label for="floatingSelect"><strong>Filtrar en base a...</strong></label>
						</div>
						<button type="button" class="btn btn-secondary bi bi-arrow-counterclockwise" @onclick="() => Restablecer()"></button>
					</div>
				</div>

				<div class="col">
					<div class="input-group" style="width: 500px">
						<div class="form-floating d-flex align-items-center">
							<InputText @bind-Value="@searchBarValue" class="form-control" placeholder="" id="floatingSearch" />
							<label for="floatingSearch">Buscar</label>
						</div>
						<button @onclick="Buscar" class="btn btn-secondary bi bi-search" type="button"></button>
					</div>
				</div>
			</div>

			<div style="overflow-x: auto;">
				<table class="table table-light table-hover" style="min-width: 100%;">
					<thead class="table table-striped">
						<tr class="text-center">
							<th>Orden ID</th>
							<th>Proveedor</th>
							<th>No.Factura</th>
							<th>Fecha Emision</th>
							<th>Fecha Vencimiento</th>
							<th>Estado</th>
							<th>Monto Total</th>
						</tr>
					</thead>
					<tbody>
						@foreach (var ordenCompra in ListaOrdenCompras)
						{
							<tr class="text-center">
								<td>@ordenCompra.OrdenCompraID</td>
								<td>@ordenCompra.proveedores</td>
								<td>@ordenCompra.NumeroFactura</td>
								<td>@ordenCompra.FechaEmision</td>
								<td>@ordenCompra.FechaVencimiento</td>
								<td>@ordenCompra.estadoOd</td>
								<td class="text-center" style="display: flex; justify-content: center; gap: 5px;">
									<a href="/CxP/Provedores/Edit/@ordenCompra.OrdenCompraID" class="btn btn-outline-info bi bi-pencil-square"></a>
									<button type="button" @onclick="() => MostrarModal(ordenCompra.OrdenCompraID)" class="btn btn-outline-danger bi bi-trash"></button>
								</td>
							</tr>
						}
					</tbody>
					<caption>Cant. De Clientes: @ListaOrdenCompras.Count</caption>
				</table>
			</div>
		</div>
	</div>
</div>

@if (mostrarModal)
{
	<div class="modal fade show" tabindex="-1" style="display: block;" aria-modal="true" role="dialog">
		<div class="modal-dialog modal-dialog-centered">
			<div class="modal-content">
				<div class="modal-header" style="background-color: #7B0323; color: white;">
					<h5 class="modal-title">Eliminar Provedor</h5>
					<button type="button" class="btn-close" @onclick="CerrarModal" aria-label="Close"></button>
				</div>
				<div class="modal-body">
					<p>¿Está seguro de que desea eliminar a este Provedor?</p>
					<p>Esta opción no se puede deshacer.</p>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" @onclick="CerrarModal">Cancelar</button>
					<button type="button" class="btn btn-danger" @onclick="Eliminar">Eliminar</button>
				</div>
			</div>
		</div>
	</div>
	<div class="modal-backdrop fade show" @onclick="CerrarModal"></div>
}

@code {
	public string searchBarValue { get; set; } = string.Empty;
	public string valorFiltro { get; set; } = string.Empty;
	public List<OrdenCompra> ListaOrdenCompras { get; set; } = new List<OrdenCompra>();
	private bool mostrarModal = false;
	private int OCIdSeleccionado { get; set; }
	private string EmailProvedoresSelecionado { get; set; } = "";

	//NOTIFICACIONES
	public ToastType TipoNotificacion { get; set; }
	public string MensajeNotificacion { get; set; } = string.Empty;
	public string TituloNotificacion { get; set; } = string.Empty;

	protected override async Task OnInitializedAsync()
	{
		ListaOrdenCompras = await ordenCompraService.Listar(C => true);
	}

	private void MostrarModal(int ordenCompraId)
	{
		OCIdSeleccionado = ordenCompraId;
		mostrarModal = true;
	}

	private void CerrarModal()
	{
		mostrarModal = false;
		OCIdSeleccionado = 0;
		EmailProvedoresSelecionado = "";
	}

	private async Task Buscar()
	{
		if (!string.IsNullOrWhiteSpace(valorFiltro))
		{
			if (valorFiltro == "id" && int.TryParse(valorFiltro, out int ProvedoreId))
			{
				ListaOrdenCompras = await ordenCompraService.Listar(s => s.OrdenCompraID == ProvedoreId);
			}
			else if (valorFiltro == "Nombre")
			{
				ListaOrdenCompras = await ordenCompraService.Listar(s => s.NumeroFactura.ToLower().Contains(valorFiltro.ToLower()));
			}
		}
		else
		{
			ListaOrdenCompras = await ordenCompraService.Listar(p => true);
		}
	}

	public async Task Eliminar()
	{
		try
		{
			await ordenCompraService.Eliminar(OCIdSeleccionado);
			ListaOrdenCompras = await ordenCompraService.Listar(x => true);
			mostrarModal = false;
			OCIdSeleccionado = 0;
			TipoNotificacion = ToastType.Success;
			TituloNotificacion = "Enhorabuena";
			MensajeNotificacion = "¡Se ha eliminado el pago!";
			MostrarToast(TipoNotificacion, TituloNotificacion, MensajeNotificacion);
		}
		catch (Exception ex)
		{
			TipoNotificacion = ToastType.Danger;
			TituloNotificacion = "Error";
			MensajeNotificacion = "Hubo un error al eliminar la orden de compra.";
			MostrarToast(TipoNotificacion, TituloNotificacion, MensajeNotificacion);
		}
	}

	public void MostrarToast(ToastType tipo, string titulo, string cuerpo)
	=> toastService.Notify(new(tipo, titulo, cuerpo));

	public async Task Restablecer()
	{
		ListaOrdenCompras = await ordenCompraService.Listar(x => true);
		searchBarValue = string.Empty;
		valorFiltro = string.Empty;

		TipoNotificacion = ToastType.Info;
		TituloNotificacion = "Aviso";
		MensajeNotificacion = "Se han restablecido los criterios de búsqueda.";
		MostrarToast(TipoNotificacion, TituloNotificacion, MensajeNotificacion);
	}
}

