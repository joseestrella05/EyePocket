@page "/CxP/Provedores/Create"
@inject ProvedoresServices provedoresService
@inject NavigationManager navigation
@inject ToastService ToastService

<EditForm Model="Provedor" OnValidSubmit="Crear">
    <DataAnnotationsValidator />
    <div class="container">
        <div class="card w-100 mx-auto p-3">
            <div class="card-body">
                <div class="text-center">
                    <InputFile class="form-control" multiples />
                    <label class="form-label">Seleccionar una imagen</label>
                </div>

                <div class="section-title mt-4">Datos personales</div>

                <div class="row">
                    <div class="col">
                        <label>Nombres *</label>
                        <InputText class="form-control" @bind-Value="Provedor.Nombre" placeholder="Nombre " />
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col">
                        <label>Dirección *</label>
                        <InputText class="form-control" @bind-Value="Provedor.Direccion" placeholder="Ej. Av. Duarte #10" />
                    </div>
                </div>

                <div class="section-title mt-4">Datos de contacto</div>

                <div class="row mt-2">
                    <div class="col">
                        <label>TEL. PRINCIPAL *</label>
                        <InputText class="form-control" @bind-Value="Provedor.Telefono" placeholder="(000) 000-0000" />
                    </div>
                </div>

                <div class="row mt-2">
                    <div class="col">
                        <label>Correo Electrónico</label>
                        <InputText class="form-control" @bind-Value="Provedor.Correo" placeholder="email@gmail.com" />
                    </div>
                </div>
            </div>
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-success btn-md">Guardar</button>
            <a href="/CxP/Provedores/Index" class="btn btn-secondary btn-md">Volver</a>
        </div>
    </div>
</EditForm>

@code {
    public Provedores Provedor { get; set; } = new Provedores();

    public async Task Crear()
    {
        if (!await Validar())
        {
            await provedoresService.Guardar(Provedor);
            ToastService.Notify(new ToastMessage(ToastType.Success, "Éxito", $"Proveedor creado correctamente."));
            Provedor = new Provedores();
            navigation.NavigateTo("/CxP/Provedores/Index");
        }
        else
        {
            ToastService.Notify(new ToastMessage(ToastType.Danger, "Error", "El proveedor ya existe."));
        }
    }

    public async Task<bool> Validar()
    {
        var existeNombre = await provedoresService.BuscarNombres(Provedor.Nombre);
        return existeNombre != null;
    }
}
